def file(self, fname, highlight=False, prefix=''):
    result = (prefix + fname)
    ll = len(result)
    if highlight:
        result = (('\x1b[01;31m' + result) + '\x1b[0;0m')
    if (ll < self.rowNameWidth):
        line = ((result + ((self.rowNameWidth - ll) * ' ')) + self.fileString)
    else:
        line = (result + self.fileString[(ll - self.rowNameWidth):])
    print  >> self.out, line
