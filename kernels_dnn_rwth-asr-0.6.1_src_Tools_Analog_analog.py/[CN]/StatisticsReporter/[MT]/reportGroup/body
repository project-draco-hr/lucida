def reportGroup(self, groupName, layers):
    layerList = layers.keys()
    layerList.sort()
    for layer in layerList:
        data = pivot(layers[layer])

        def evalStat(stat):
            try:
                return stat(data)
            except KeyError:
                return []
        values = dict([((stat, field), value) for stat in self.statistics for (field, value) in evalStat(stat)])
        self.format.row(groupName, layer, values)
