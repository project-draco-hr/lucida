{
  this.zoom=zoom;
  if (spectrogram != null) {
    int width=spectrogram.getWidth();
    int height=spectrogram.getHeight();
    ImageFilter scaleFilter=new ReplicateScaleFilter((int)(zoom * width),height);
    scaledSpectrogram=createImage(new FilteredImageSource(spectrogram.getSource(),scaleFilter));
    Dimension d=new Dimension((int)(width * zoom),height);
    setMinimumSize(d);
    setMaximumSize(d);
    setPreferredSize(d);
    repaint();
  }
}
