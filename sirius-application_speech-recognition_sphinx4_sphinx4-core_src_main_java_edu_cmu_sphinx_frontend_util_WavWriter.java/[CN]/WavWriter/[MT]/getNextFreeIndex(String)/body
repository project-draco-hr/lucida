{
  int fileIndex=0;
  String fileName;
  while (true) {
    String indexString=Integer.toString(fileIndex);
    fileName=outPattern.substring(0,Math.max(0,outPattern.length() - indexString.length())) + indexString + ".wav";
    if (!new File(fileName).isFile())     break;
    fileIndex++;
  }
  return fileName;
}
