{
  String rep;
  if (left != null) {
    rep=conv1ph(left) + '-';
  }
 else   rep="";
  rep+=conv1ph(base);
  if (right != null) {
    rep+='+' + conv1ph(right);
  }
  if (rep.equals("null")) {
    System.err.println("detson error " + left + ' '+ base+ ' '+ right);
    System.exit(1);
  }
  return rep;
}
