{
  if (recording) {
    return false;
  }
  if (!open()) {
    return false;
  }
  utteranceEndReached=false;
  if (audioLine.isRunning()) {
    logger.severe("Whoops: audio line is running");
  }
  assert(recorder == null);
  recorder=new RecordingThread("Microphone");
  recorder.start();
  recording=true;
  return true;
}
