def itergroup(iterator, count, default=None):
    "Iterate in groups of 'count' values. If there\n    aren't enough values, the last result is padded with\n    the default."
    iterator = iter(iterator)
    while True:
        moreValues = False
        values = []
        for x in range(count):
            try:
                values.append(iterator.next())
                moreValues = True
            except StopIteration:
                values.append(default)
        if (not moreValues):
            raise StopIteration
        yield tuple(values)
