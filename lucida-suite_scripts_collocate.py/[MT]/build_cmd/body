def build_cmd(root, args, procs):
    built = ''
    for i in range(0, procs):
        for (k, a) in enumerate(args):
            if (k == 0):
                built = (built + './')
            if (type(a) == type('str')):
                built = ((((built + root) + '/') + a) + ' ')
            else:
                built = ((built + str(a)) + ' ')
        if (i < (procs - 1)):
            built = (built + '& ')
    return built
