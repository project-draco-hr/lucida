def accept(self):
    (plain_client, addr) = self.handle.accept()
    try:
        client = ssl.wrap_socket(plain_client, certfile=self.certfile, server_side=True, ssl_version=self.SSL_VERSION, ciphers=self.ciphers)
    except ssl.SSLError as ssl_exc:
        plain_client.close()
        return None
    result = TSocket.TSocket()
    result.setHandle(client)
    return result
