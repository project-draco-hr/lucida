def __call__(self, data):
    data = data[self.dataField]
    nSegments = len(data)
    data = pivot(data)
    nInsertions = sum(data['insertion'])
    nDeletions = sum(data['deletion'])
    nSubstitutions = sum(data['substitution'])
    nTokens = sum(data['token'])
    nErrors = ((nDeletions + nInsertions) + nSubstitutions)
    errorPercent = 100
    if (nTokens != 0):
        errorPercent = ((100.0 * nErrors) / nTokens)
    return zip(self.fields, [nSegments, nDeletions, nInsertions, nSubstitutions, nErrors, nTokens, errorPercent])
