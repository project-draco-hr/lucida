{
  InputStream stream=null;
  if (nextFile == null) {
    nextFile=readNext();
  }
  if (nextFile != null) {
    try {
      stream=new FileInputStream(nextFile);
      nextFile=null;
    }
 catch (    IOException ioe) {
      ioe.printStackTrace();
      throw new Error("Cannot convert " + nextFile + " to a FileInputStream");
    }
  }
  if (stream == null && transcript != null) {
    try {
      transcript.close();
    }
 catch (    IOException ioe) {
      ioe.printStackTrace();
    }
  }
  return stream;
}
