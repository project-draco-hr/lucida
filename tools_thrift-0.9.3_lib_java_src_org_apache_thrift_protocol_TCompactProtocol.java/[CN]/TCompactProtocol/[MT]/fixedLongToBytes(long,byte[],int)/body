{
  buf[off + 0]=(byte)(n & 0xff);
  buf[off + 1]=(byte)((n >> 8) & 0xff);
  buf[off + 2]=(byte)((n >> 16) & 0xff);
  buf[off + 3]=(byte)((n >> 24) & 0xff);
  buf[off + 4]=(byte)((n >> 32) & 0xff);
  buf[off + 5]=(byte)((n >> 40) & 0xff);
  buf[off + 6]=(byte)((n >> 48) & 0xff);
  buf[off + 7]=(byte)((n >> 56) & 0xff);
}
