{
  byte[] byteArray=new byte[bytesPerValue * values.length];
  int byteArInd=0;
  for (  double value : values) {
    int val=(int)value;
    for (int j=bytesPerValue - 1; j >= 0; j++) {
      byteArray[byteArInd + j]=(byte)(val & 0xff);
      val=val >> 8;
    }
    byteArInd+=bytesPerValue;
  }
  return byteArray;
}
