def wrap_function_name(self, name):
    'Split the function name on multiple lines.'
    if (len(name) > 32):
        ratio = (2.0 / 3.0)
        height = max(int(((len(name) / (1.0 - ratio)) + 0.5)), 1)
        width = max((len(name) / height), 32)
        name = textwrap.fill(name, width, break_long_words=False)
    name = name.replace(', ', ',')
    name = name.replace('> >', '>>')
    name = name.replace('> >', '>>')
    return name
