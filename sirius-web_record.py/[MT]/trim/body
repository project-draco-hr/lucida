def trim(snd_data):
    'Trim the blank spots at the start and end'

    def _trim(snd_data):
        snd_started = False
        r = array('h')
        for i in snd_data:
            if ((not snd_started) and (abs(i) > THRESHOLD)):
                snd_started = True
                r.append(i)
            elif snd_started:
                r.append(i)
                return r
    snd_data = _trim(snd_data)
    snd_data.reverse()
    snd_data = _trim(snd_data)
    snd_data.reverse()
    return snd_data
