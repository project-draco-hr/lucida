{
  int mid=-1, start=0, end=getNumberNGrams() - 1;
  while ((end - start) > 0) {
    mid=(start + end) / 2;
    int midWordID=getWordID(mid);
    if (midWordID < nthWordID) {
      start=mid + 1;
    }
 else     if (midWordID > nthWordID) {
      end=mid;
    }
 else {
      break;
    }
  }
  return mid;
}
