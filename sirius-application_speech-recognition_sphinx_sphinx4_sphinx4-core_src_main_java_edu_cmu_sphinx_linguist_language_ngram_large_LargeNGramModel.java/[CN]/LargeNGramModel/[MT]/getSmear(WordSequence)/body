{
  float smearTerm=0.0f;
  if (fullSmear) {
    smearCount++;
    int length=wordSequence.size();
    if (length == 1) {
      int wordID=getWordID(wordSequence.getWord(0));
      smearTerm=unigramSmearTerm[wordID];
    }
 else     if (length >= 2) {
      int size=wordSequence.size();
      int wordID1=getWordID(wordSequence.getWord(size - 2));
      int wordID2=getWordID(wordSequence.getWord(size - 1));
      Float st=getSmearTerm(wordID1,wordID2);
      if (st == null)       smearTerm=unigramSmearTerm[wordID2];
 else {
        smearTerm=st;
        smearBigramHit++;
      }
    }
    if (smearCount % 100000 == 0)     System.out.println("Smear hit: " + smearBigramHit + " tot: "+ smearCount);
  }
  if (fullSmear && logger.isLoggable(Level.FINE))   logger.fine("SmearTerm: " + smearTerm);
  return smearTerm;
}
