{
  int got=0;
  int ret=0;
  while (got < len) {
    ret=read(buf,off + got,len - got);
    if (ret < 0) {
      throw new TTransportException("Error in reading from file");
    }
    if (ret == 0) {
      throw new TTransportException(TTransportException.END_OF_FILE,"End of File reached");
    }
    got+=ret;
  }
  return got;
}
