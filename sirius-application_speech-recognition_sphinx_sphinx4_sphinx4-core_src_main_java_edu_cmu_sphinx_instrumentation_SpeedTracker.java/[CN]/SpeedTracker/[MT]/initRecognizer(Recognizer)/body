{
  if (recognizer == null) {
    recognizer=newRecognizer;
    recognizer.addResultListener(this);
    recognizer.addStateListener(this);
  }
 else   if (recognizer != newRecognizer) {
    recognizer.removeResultListener(this);
    recognizer.removeStateListener(this);
    recognizer=newRecognizer;
    recognizer.addResultListener(this);
    recognizer.addStateListener(this);
  }
}
