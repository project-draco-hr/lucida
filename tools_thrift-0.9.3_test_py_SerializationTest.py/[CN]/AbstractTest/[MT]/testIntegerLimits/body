def testIntegerLimits(self):
    bad_values = [CompactProtoTestStruct(a_byte=128), CompactProtoTestStruct(a_byte=(-129)), CompactProtoTestStruct(a_i16=32768), CompactProtoTestStruct(a_i16=(-32769)), CompactProtoTestStruct(a_i32=2147483648), CompactProtoTestStruct(a_i32=(-2147483649)), CompactProtoTestStruct(a_i64=9223372036854775808L), CompactProtoTestStruct(a_i64=(-9223372036854775809L))]
    for value in bad_values:
        self.assertRaises(Exception, self._serialize, value)
