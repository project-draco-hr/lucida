import string
import sys
import re
if (len(sys.argv) == 1):
    print 'Usage: postag-from-charniak.py <filename>'
    sys.exit(1)
reobj = re.compile('\\([^ ][^ ]* [^)(][^)(]*\\)')
for line in open(sys.argv[1]).readlines():
    line = string.strip(line)
    list = reobj.findall(line)
    for element in list:
        some_list = string.split(element)
        print ('%s_%s' % (some_list[1][:(-1)], some_list[0][1:])),
    print ' '
