import glob
import os
import string
import binascii
cdata = []
if os.path.exists('model'):
    cdata.append('#include "model.h"\n\n#pragma file_attr("prefersMem =external")\n#pragma file_attr("prefersMemNum =30")\n#pragma section("memoryfile")\n\n')
    cdata.append('const struct memoryfile modelfiles[] = {\n')
    cdata.extend(scanfiles('model'))
    cdata.append('\t{"",0,""}\n};\n')
else:
    print 'model directory does not exist!'
file('CoreA/model.c', 'w').writelines(cdata)
print 'model.c created\n'
